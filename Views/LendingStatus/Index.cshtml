<link rel="stylesheet" href="~/Content/reminder.css"/>

<section class="py-5 mt-5">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2 class="fw-bold">R @TempData["room"].ToString()</h2>
            </div>
        </div>
        <div class="app-content">
            <div class="app-section">
                <div class="app-section-header">
                    <p class="time" style="font-weight: 1000; font-size: 50px;">@DateTime.Now.Month 月</p>
                    <div class="col col-1">
                        <a href=@Url.Action("Create", "LendingStatus", new { id = @TempData["room"] }) class="btn btn-primary shadow" role="button">
