                            </svg>
                        </a>
                    </div>
                </div>
                <div class="app-calendar">
                    <div class="app-calendar-main">
                        <div class="app-calendar-timeline">

                            <div class="app-calendar-time">0800</div>
                            <div class="app-calendar-time">0900</div>
                            <div class="app-calendar-time">1000</div>
                            <div class="app-calendar-time">1100</div>
                            <div class="app-calendar-time">1200</div>
                            <div class="app-calendar-time">1300</div>
                            <div class="app-calendar-time">1400</div>
                            <div class="app-calendar-time">1500</div>
                            <div class="app-calendar-time">1600</div>
                            <div class="app-calendar-time">1700</div>
                            <div class="app-calendar-time">1800</div>
                            <div class="app-calendar-time">1900</div>
                            <div class="app-calendar-time">2000</div>
                            <div class="app-calendar-time">2100</div>

                        </div>
                        <div class="app-calendar-days">
                            <div class="app-calendar-monday">

                                <div class="app-calendar-date">
                                    <span class="app-calendar-day">@DateTime.Now.ToString("dd")</span>
                                    <span class="app-calendar-week">@DateTime.Now.DayOfWeek.ToString().Substring(0, 3)</span>
                                </div>

                                <div class="app-calendar-events">
                                    @foreach (var item in Model)
                                    {
                                        if (item.StartTime.ToString("MM/dd/yyyy").Equals(DateTime.Now.ToString("MM/dd/yyyy")))
                                        {
                                            <div class="event start-@item.StartTime.Hour end-@item.EndTime.Hour notify">
                                                @item.StartTime.ToString("HH ':' mm") <br/>
                                                @item.EndTime.ToString("HH ':' mm")
                                            </div>
                                        }
                                    }
                                </div>

                            </div>
                        </div>

