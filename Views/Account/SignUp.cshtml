@model GaoXiaoAsp.Models.User

@{
    ViewBag.Title = "SignUp";
}

<section class="py-5 mt-5">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Sign up</p>
                <h2 class="fw-bold">創建帳戶</h2>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col">
                <div class="position-relative" style="display: flex;flex-wrap: wrap;justify-content: flex-end;">
                    <div style="position: relative;flex: 0 0 45%;transform: translate3d(-15%, 35%, 0);">
                        <img class="img-fluid" src="~/Images/niklas-ohlrogge-uu0cOMPdM2g-unsplash.jpg"
                             data-bss-parallax="" data-bss-parallax-speed="0.8">
                    </div>
                    <div style="position: relative;flex: 0 0 45%;transform: translate3d(-5%, 20%, 0);">
                        <img class="img-fluid" src="~/Images/sara-kurfess-5H08Y81JF_M-unsplash.jpg"
                             data-bss-parallax="" data-bss-parallax-speed="0.4">
                    </div>
                    <div style="position: relative;flex: 0 0 60%;transform: translate3d(0, 0%, 0);">
                        <img class="img-fluid" src="~/Images/max-langelott-wWQ760meyWI-unsplash.jpg"
                             data-bss-parallax="" data-bss-parallax-speed="0.25">
                    </div>
                </div>
            </div>
            <div class="col mb-5">
                <div class="card">
                    <div class="card-body text-center d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle bs-icon-primary shadow bs-icon my-4">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="1em" height="1em"
                                 fill="currentColor">
                                <path d="M256 0C114.6 0 0 114.6 0 256s114.6 256 256 256s256-114.6 256-256S397.4 0 256 0zM256 128c39.77 0 72 32.24 72 72S295.8 272 256 272c-39.76 0-72-32.24-72-72S216.2 128 256 128zM256 448c-52.93 0-100.9-21.53-135.7-56.29C136.5 349.9 176.5 320 224 320h64c47.54 0 87.54 29.88 103.7 71.71C356.9 426.5 308.9 448 256 448z"></path>
                            </svg>
                        </div>
                        <form method="post">
                            <div class="mb-3">
                                <input class="form-control" type="text" name="Name" placeholder="姓名" required="required">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="email" name="Email" placeholder="電子郵件" required="required">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="tel" name="Telephone" placeholder="電話" required="required">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="password" name="Password" placeholder="密碼" required="required">
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="text" name="Sid" placeholder="學號 可填空">
                            </div>
                            <div class="mb-3">
                                <select class="form-select" name="grade">
                                    <optgroup label="身份">
                                        <option value="0">學士</option>
                                        <option value="1">碩士</option>
                                        <option value="2">教職人員</option>
                                    </optgroup>
                                </select>
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-primary shadow d-block w-100" type="submit">Sign up</button>
                            </div>
                            <p class="text-muted">已經有帳號嗎？&nbsp;@Html.ActionLink("登入", "SignIn", "Account")</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>