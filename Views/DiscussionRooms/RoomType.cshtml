@model IEnumerable<GaoXiaoAsp.Models.DiscussionRoom>

@{
    ViewBag.Title = "RoomType";
}

<section class="py-5 mt-5">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Discussion room 3 to 8 people</p>
                <h2 class="fw-bold">
                    <strong>討論室 3至8人</strong><br>
                </h2>
                <p class="text-muted w-lg-50">誰可以使用：</p><span class="badge bg-primary mb-2">學士</span>
                <span
                    class="badge bg-primary mb-2">
                    碩士
                </span><span class="badge bg-primary mb-2">博士</span>
                <span
                    class="badge bg-primary mb-2">
                    教職
                </span>
            </div>
        </div>
        <div class="py-5 p-lg-5">
            <div class="row mx-auto row-cols-1 row-cols-md-2">
                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <a href=@Url.Action("Index", "LendingStatus", new { id = item.RoomNumber.Substring(1, 3) })>
                            <div class="card shadow-sm card-room">
                                <div class="card-body">
                                    <h4 class="card-title">@item.RoomNumber</h4>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>